<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.10.xsd">
    <preConditions>
            <dbms type="postgresql"/>
    </preConditions>
    
    <changeSet id="1" author="nvoxland">
        <createTable tableName="news">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="varchar(50)"/>            
        </createTable>
    </changeSet>

    <changeSet id="12" author="nvoxland">
        <createSequence sequenceName="seq_news"/>
    </changeSet>


    <changeSet id="2" author="nvoxland" context="test">
        <insert tableName="news">
            <column name="id" value="1"/>
            <column name="title" value="Liquibase 0.8 Released"/>
        </insert>
        <insert tableName="news">
            <column name="id" value="2"/>
            <column name="title" value="Liquibase 0.9 Released"/>
        </insert>
    </changeSet>

    <changeSet id="3" author="nvoxland" context="demo">
        <insert tableName="news">
            <column name="id" value="3"/>            
            <column name="title" value="Liquibase 1.0 Released"/>
        </insert>
    </changeSet>

    <changeSet id="4" author="molivsdat">
        <sql endDelimiter=";">
            DROP TYPE IF EXISTS sample_enum CASCADE;
            create type sample_enum as enum ('EnumValOne', 'EnumValTwo');
        </sql>
    </changeSet>

    <changeSet id="5" author="sudiptosarkar">
        <createTable tableName="sample_enum_table">
            <column name="int_col" type="int"/>
            <column name="str_col" type="varchar(50)"/>
            <column name="enum_col" type="sample_enum"/>
        </createTable>
    </changeSet>

    <changeSet id="6" author="molivasdat">
        <loadData file="datafiles/enum-data.csv" relativeToChangelogFile="true" tableName="sample_enum_table">
            <column header="int_col" name="int_col" type="NUMERIC"/>
            <column header="str_col" name="str_col" type="STRING"/>
            <column header="enum_col" name="enum_col" type="OTHER"/>
        </loadData>
    </changeSet>
</databaseChangeLog>