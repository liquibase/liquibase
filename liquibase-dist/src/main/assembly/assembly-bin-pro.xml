<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
	<id>liquibase-bin</id>
	<formats>
		<format>tar.gz</format>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<componentDescriptors>
		<componentDescriptor>src/main/assembly/component-minimal-deps.xml</componentDescriptor>
		<componentDescriptor>src/main/assembly/component-additional-deps.xml</componentDescriptor>
	</componentDescriptors>
	<dependencySets>
		<dependencySet>
			<outputFileNameMapping>${artifact.artifactId}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
			<outputDirectory>internal/lib</outputDirectory>
			<includes>
				<include>
					org.liquibase:liquibase-commercial:jar:
				</include>
			</includes>
		</dependencySet>
	</dependencySets>
</assembly>
