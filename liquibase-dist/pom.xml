<!--                        </goals>-->
<!--                        <phase>none</phase>-->
<!--                    </execution>-->
<!--                </executions>-->
<!--            </plugin>-->
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>liquibase-pro</id>

            <activation>
                <file>
                    <exists>../../liquibase-pro/pom.xml</exists>
                </file>
            </activation>

            <dependencies>
                <dependency>
                    <groupId>com.datical.lb</groupId>
                    <artifactId>liquibase-pro</artifactId>
                    <version>${project.version}</version>
